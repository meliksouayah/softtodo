{% extends 'dashboard.html.twig' %}

{% block title %}
    {{'translate.news_details4'|trans }}
{% endblock %}

{% block body %}
      <!-- Titlebar
    ================================================== -->
    <!-- add class "disable-gradient" to enable consistent background overlay -->
    <div class="container" >
        <div class="photo-section" data-background-image="{{ asset(project.getCoverPictureFullPath) }}" style="background-image: url({{ asset(project.getCoverPictureFullPath) }});">

            <!-- Infobox -->
            <div class="text-content white-font">
                <div class="container">

                    <div class="row">
                        <div class="col-lg-6 col-md-8 col-sm-12">
                            <h2> <br> </h2>
                            <p></p>
                            <br><br>
                            <br><br>
                            <br><br>
                            <br><br>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Infobox / End -->

        </div>






        <!-- Content -->

                <!-- Description -->
                <div class="single-page-section">
                    <h3 class="margin-bottom-25" style="font-weight: 600;font-size: 26px;line-height: 30px;">

                           Title: {{ project.title|raw }}


                    </h3>
                    <div class="row">
                        <div class="col-xl-12 ">
                            <p>Date: {{ project.createdat|date('d') }}/{{ project.createdat|date('m') }}/{{ project.createdat|date('Y') }}</p>

                        </div>
                        <div class="col-xl-12 ">
                            <p style="font-size: 20px;line-height: 32px;">


                               Description:     {{ project.description|raw }}


                            </p>

                        </div>
                        <div class="col-xl-12 ">
                            <p style="font-size: 20px;line-height: 32px;">


                                Filename:
                                {% if asset( project.getPdfFullPath)=='/' %}
                                    <a  href ="" style="color:#b03b42;font-weight: bold ;font-size: 20px;" target="_blank">
                                        Empty
                                    </a>
                                {% else %}
                                    <a  href ="{{ asset( project.getPdfFullPath) }}" style="color:#b03b42;font-weight: bold ;font-size: 20px;" target="_blank">
                                        filename  <i class="icon-feather-download"></i>
                                    </a>
                                {% endif %}



                            </p>

                        </div>
                        <div class="col-xl-12 ">
                            <p style="font-size: 20px;line-height: 32px;">


                                status:     {{ project.status}}


                            </p>

                        </div>
                        <div class="col-xl-12 ">
                            <p style="font-size: 20px;line-height: 32px;">


                                Number of Task:     {{ project.NumberTask }}


                            </p>

                        </div>
                        <div class="col-xl-12">
                            <br>
                        </div>



                    </div>




                    <!-- Gallery -->

                </div>


                <!-- Sidebar -->






        <!--Freelancer -->



    </div>



{% endblock %}

