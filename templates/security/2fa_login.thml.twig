<div class="container" style="text-align: center">
    <p class="label"><label for="_auth_code">Code d&#039;authentification google:</label></p>
    <p class="label"><label >Scan QR Code</label></p>

    <img id="imageQRcode" src="{{ qrcode }}" name="imageQRcode">
    <form class="form" action="/2fa_check" method="post">
        <p class="widget">
            <input
                    id="_auth_code"
                    type="text"
                    name="_auth_code"
                    autocomplete="one-time-code"
                    autofocus
            />
        </p>

        <p class="submit"><input type="submit" value="Login" /></p>
    </form>

    <p class="cancel"><a href="{{ path('app_logout') }}">Cancel</a></p>

</div>
